
<h2>Add new Exhibit</h2>
<form method="post" action="/exhibits">

  <label for="name">Name:</label>
    <input id="name" type="text" name="name"/>

  <label for="year">Year</label>
    <input id="year" type="text" name="year"/>

  <label for="medium">Medium</label>
    <input id="medium" type="text" name="medium"/>

  <label for="style">Style</label>
    <input id="style" type="text" name="style"/>

  <label for="image">Image</label>
    <input id="image" type="text" name="image"/>

  <label> Select an Artist:  </label>
    <select id="dropdown" name="artist_id">
      <% for artist in @artists %>
      <option value="<%=artist.id%>"><%= artist.full_name%></option>
      <%end%>
    </select>


  <input type='submit' value="Save Exhibit"/>
</form>
