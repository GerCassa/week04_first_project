
<h3>Select exhibit to EDIT:</h3>

  <table id="artist-work">
    <tr>
      <th> Name </th>
      <th> Image </th>
      <th> Action </th>
    </tr>
    <% for exhibit in @exhibits %>
    <tr>
      <td><a href="/exhibits/<%= exhibit.id %>/edit"><%= exhibit.name%> </a></td>
      <td><a href="<%=exhibit.image%>"><img src="<%=exhibit.image%>" height="100" width="150"></a></td>
      <td><form method="get" action="/exhibits/<%= exhibit.id %>/edit">
      <input id="edit-button" type="submit" value="Edit">
      </form>
      </td>
    </tr>
      <%end%>
  </table>
