
<h3>Exhibit:</h3>

<table id="exhibit_table">
  <tr>
    <th>ID</th>
    <th></th>
    <th>Name</th>
    <th></th>
    <th>Year</th>
    <th></th>
    <th>Medium</th>
    <th></th>
    <th>Style</th>
    <th></th>
    <th>Artist</th>
    <th></th>
    <th>Image</th>
  </tr>
  <tr>
    <td><%=@exhibit.id%></td>
    <td>|</td>
    <td><%=@exhibit.name()%></td>
    <td>|</td>
    <td><%=@exhibit.year()%></td>
    <td>|</td>
    <td><%=@exhibit.medium%></td>
    <td>|</td>
    <td><%=@exhibit.style()%></td>
    <td>|</td>
    <%@exhibit.artists.each do |artist|%>
    <td><%= artist.full_name() %></td>
    <%end%>
    <td>|</td>
    <td><a href="<%=@exhibit.image%>"><img src="<%=@exhibit.image%>" height="100" width="100"></a></td>
  </tr>
</table>
